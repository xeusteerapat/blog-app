{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "compileOnSave": false,
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
