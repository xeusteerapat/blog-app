{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es5", "es6", "dom"],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "baseUrl": ".",
  "include": ["src/*.ts"],
  "exclude": ["node_modules"],
  "extensions": [".ts", ".js"]
}
